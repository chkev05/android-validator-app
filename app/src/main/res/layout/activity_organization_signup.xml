<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organization Sign Up"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="20dp"
            android:padding="10dp"/>
        <Spinner
            android:id="@+id/spinnerSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editOrganizationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Name"
            android:inputType="text"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editNPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="National Provider Identified (NPI)"
            android:inputType="text"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editFEIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Federal Emplyer Identification Number (FEIN)"
            android:inputType="number"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Address Line"
            android:inputType="text"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:padding="10dp"/>
        <Spinner
            android:id="@+id/spinnerStates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editZipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode"
            android:inputType="number"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editTaxID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State Tax ID"
            android:inputType="text"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Contact Phone Number"
            android:inputType="phone"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Contact Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/editOrgRepUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Representative Username"
            android:inputType="text"
            android:padding="10dp"/>
        <Button
            android:id="@+id/button_submit_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"/>
        <Button
            android:id="@+id/button_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homepage"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>