    <Button
        android:id="@+id/buttonAdminLogin"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/purple_500"
        android:text="Admin Login"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonIndividualSignup"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:text="Individual Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdminLogin"
        android:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/buttonOrganizationSignup"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/purple_200"
        android:text="Organization Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/buttonIndividualSignup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="TCR Sign Up App"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

